<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <main style="margin: 1em;">
      <% if (user){ %>
      <form class="form-inline" action="/urls/logout" method="POST">
        <span class="align-middle" style='margin-right: 10px;'>Logged in as <%= user.email %></span>
        <div class="form-group mb-2">
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </div>
      </form>
      <% } else { %>
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2">          
          <button type="submit" class="btn btn-outline-dark" formaction="/login" formmethod="GET">Login</button>
          <button type="submit" class="btn btn-outline-dark" formaction="/register" formmethod="GET"
          style="margin-left: 10px;text-decoration: none;">Register</button>
        </div>
      </form>
      <% } %>
  </nav>
</header>